{
    "layer": "bottom",
    "position": "top",
    "height": 24,
    "spacing": 0,
    // Choose the order of the modules
    "modules-left": [
        "sway/workspaces",
        "sway/mode",
    ],
    "modules-center": [
        "sway/window",
    ],
    "modules-right": [
        "custom/playerctl_prev",
        "custom/playerctl",
        "custom/playerctl_next",
        "custom/memory",
        "custom/cpu",
        "temperature",
        "custom/network",
        "backlight",
        "pulseaudio",
        "battery",
        "clock",
        "tray",
    ],
    // Modules configuration
    "sway/workspaces": {
        "disable-scroll": true,
        "all-outputs": false,
    },

    "sway/window": {
        "format": "({app_id}/{shell}) {title}",
        "icon": true,
        "icon-size": 16,
        "max-length": 50,
        "tooltip": true,
        "all-outputs": true,
    },
    "sway/mode": {
        "format": "{}"
    },
    "tray": {
        "icon-size": 16,
        "spacing": 10
    },
    "clock": {
        "format": "{:%Y-%m-%d (%a) %H:%M:%S}",
        "interval": 1,
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format-alt": "{:%Y-%m-%d}"
    },
    "custom/memory": {
        "interval": 3,
        "format": "{icon} {}",
        "return-type": "json",
        "exec": "deno run --allow-run ~/.config/waybar/scripts/memory.ts",
        "exec-if": "true",
        "tooltip": true,
        "format-icons": ["󰝦", "󰪞", "󰪟", "󰪠", "󰪡", "󰪢", "󰪣", "󰪤", "󰪥"],
    },
    "custom/cpu": {
        "format": "{icon} {}",
        "return-type": "json",
        "exec": "deno run --allow-read ~/.config/waybar/scripts/cpu.ts",
        "tooltip": true,
        "format-icons": "󰍛",
    },
    "temperature": {
        "critical-threshold": 70,
        "format": "{temperatureC}℃",
    },
    "backlight": {
        // "device": "acpi_video1",
        "format": "{icon} {percent}%",
        "format-icons": ["󰃞", "󰃟", "󰃠"]
    },
    "battery": {
        "states": {
            // "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{icon} {capacity}%",
        "format-charging": "󰂅 {capacity}%",
        "format-plugged": "󰂄{capacity}%",
        "format-alt": "{icon} {time} ({power}W)",
        "tooltip-format": "{timeTo}",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": ["󰁺", "󰁻", "󰁼", "󰁽", "󰁾", "󰁿", "󰂀", "󰂁", "󰂂"]

    },
    "custom/network": {
        "format": "{icon} {}",
        "return-type": "json",
        "exec": "deno run --allow-run --allow-read ~/.config/waybar/scripts/network.ts",
        "tooltip": true,
        // "format-alt": "{ifname}: {ipaddr}/{cidr}",
        "format-icons": {
            "wifi": ["󰤯", "󰤟", "󰤢", "󰤥", "󰤨"],
            "wifi-nc": "󱛇",
            "eth": "󰌗",
            "nc": "-",
        },
    },
    "pulseaudio": {
        "scroll-step": 1,
        "format": "{icon} {volume}% {format_source}",
        "format-muted": "󰖁 {volume}% {format_source}",
        "format-source": "󰍬 {volume}%",
        "format-source-muted": "󰍭",
        "format-icons": {
            // "headphone": "Hp",
            "default": ["󰕿", "󰖀", "󰕾"]

        },
        "on-click": "pamixer -t",
        "on-click-right": "pavucontrol",
    },
    "custom/playerctl": {
        "format": "{}",
        "return-type": "json",
        "exec": "deno run --allow-run ~/.config/waybar/scripts/playerctl.ts",
        "tooltip": true,

        "on-click": "playerctl play-pause",
        "on-scroll-up": "playerctld shift",
        "on-scroll-down": "playerctld unshift",
    },
    "custom/playerctl_prev": {
        "format": "󰒮",
        "tooltip": false,
        "on-click": "playerctl -p playerctld previous",
    },
    "custom/playerctl_next": {
        "format": "󰒭",
        "tooltip": false,
        "on-click": "playerctl -p playerctld next",
    },
}

